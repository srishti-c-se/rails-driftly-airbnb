<h1>Booking Details</h1>

<p><strong>Vehicle:</strong> <%= @booking.vehicle.title %></p>
<p><strong>Start Date:</strong> <%= @booking.start_date %></p>
<p><strong>End Date:</strong> <%= @booking.end_date %></p>
<p><strong>Pickup Address:</strong> <%= @booking.pickup_address %></p>
<p><strong>Dropoff Address:</strong> <%= @booking.dropoff_address %></p>
<p><strong>Total Price:</strong> <%= @booking.total_price %></p>
<p><strong>Status:</strong> <%= @booking.status&.capitalize %></p>
<p><strong>Payment Status:</strong> <%= @booking.payment_status&.capitalize %></p>

<% if @booking.pending? || @booking.accepted? %>
  <%= link_to "Cancel Booking",
              cancel_booking_path(@booking),
              data: { turbo_method: :patch, turbo_confirm: "Are you sure?" },
              class: "btn btn-warning" %>
<% end %>

<%= link_to "Back to My Bookings", bookings_path, class: "btn btn-primary" %>

<hr>

<div class="container chat">
  <h1>Your booking for <%= @booking.vehicle.title %></h1>

  <%= turbo_stream_from "thread_Booking_#{@booking.id}_messages" %>

  <div id="messages" class="messages">
    <% @booking.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>

  <div class="message-form mt-3">
    <%= simple_form_for [@booking, @message],
      html: {
        class: "d-flex gap-2",
        data: {
          controller: "reset-form",
          action: "turbo:submit-end->reset-form#reset"
        }
      } do |f| %>

      <% other_user = current_user == @booking.vehicle.user ? @booking.user : @booking.vehicle.user %>

      <%= f.input :body,
        label: false,
        placeholder: "Message #{other_user.first_name}",
        wrapper_html: { class: "flex-grow-1" } %>

      <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>
</div>
