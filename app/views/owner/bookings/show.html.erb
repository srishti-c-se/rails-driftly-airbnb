<h1>Booking Details</h1>

<p><strong>Vehicle:</strong> <%= @booking.vehicle.title %></p>
<p><strong>Booked by:</strong> <%= @booking.user.first_name %> <%= @booking.user.last_name %></p>
<p><strong>Start Date:</strong> <%= @booking.start_date %></p>
<p><strong>End Date:</strong> <%= @booking.end_date %></p>
<p><strong>Status:</strong> <%= @booking.status.capitalize %></p>
<p><strong>Total Price:</strong> <%= @booking.total_price %></p>

<% if @booking.pending? %>
  <%= button_to "Accept", owner_booking_path(@booking), method: :patch, params: { status: "accepted" }, class: "btn btn-success" %>
  <%= button_to "Reject", owner_booking_path(@booking), method: :patch, params: { status: "rejected" }, class: "btn btn-danger" %>
<% end %>

<%= link_to "Back to Bookings", owner_bookings_path, class: "btn btn-secondary" %>
